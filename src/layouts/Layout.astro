---
export interface Props {
	title?: string;
	description?: string;
	keywords?: string;
}

const {
	title = "Acts College SF | Christian Fellowship at SFSU & NOPA",
	description = "Acts College SF is a Christian fellowship and club for college students at USF, SFSU, and CCSF in San Francisco. Join us for worship, Bible study, and community!",
	keywords = "Klesis, Klesis SF, Klesis San Francisco, USF Christian fellowship, SFSU Christian fellowship, Christian club USF, Christian club SFSU, San Francisco Christian fellowship, SF Christian club, college ministry San Francisco, Acts College SF, Koinonia SFSU, CCSF Christian fellowship, Bay Area college ministry",
} = Astro.props;
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="canonical" href={canonicalURL} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />

		<!-- Geo-targeting for San Francisco -->
		<meta name="geo.region" content="US-CA" />
		<meta name="geo.placename" content="San Francisco" />
		<meta name="geo.position" content="37.7749;-122.4194" />
		<meta name="ICBM" content="37.7749, -122.4194" />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta
			property="og:image"
			content={new URL("/social-preview.jpg", Astro.url)}
		/>
		<meta property="og:site_name" content="Klesis SF - Acts College SF" />
		<meta property="og:locale" content="en_US" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta
			property="twitter:image"
			content={new URL("/social-preview.jpg", Astro.url)}
		/>

		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700;800&display=swap"
			rel="stylesheet"
		/>
		<script type="speculationrules">
			{
				"prerender": [
					{
						"where": { "href_matches": "/*" },
						"eagerness": "moderate"
					}
				],
				"prefetch": [
					{
						"where": { "href_matches": "/*" },
						"eagerness": "moderate"
					}
				]
			}
		</script>
		<script
			src="https://app.chibi.sh/scripts/simple.js"
			data-project-id="sfactscollege-9465"></script>

		<!-- Organization Schema with alternate names for SEO -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": ["Church", "Organization", "EducationalOrganization"],
				"name": "Acts College SF",
				"alternateName": [
					"Klesis SF",
					"Klesis San Francisco",
					"Acts College SF",
					"Koinonia SFSU",
					"USF Christian Fellowship",
					"SFSU Christian Fellowship",
					"SF Christian Club"
				],
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "1275 Harbor Bay Pkwy",
					"addressLocality": "Alameda",
					"addressRegion": "CA",
					"postalCode": "94502",
					"addressCountry": "US"
				},
				"areaServed": [
					{
						"@type": "City",
						"name": "San Francisco",
						"sameAs": "https://en.wikipedia.org/wiki/San_Francisco"
					},
					{
						"@type": "CollegeOrUniversity",
						"name": "University of San Francisco",
						"alternateName": "USF",
						"sameAs": "https://www.usfca.edu/"
					},
					{
						"@type": "CollegeOrUniversity",
						"name": "San Francisco State University",
						"alternateName": "SFSU",
						"sameAs": "https://www.sfsu.edu/"
					},
					{
						"@type": "CollegeOrUniversity",
						"name": "City College of San Francisco",
						"alternateName": "CCSF",
						"sameAs": "https://www.ccsf.edu/"
					}
				],
				"email": "actcollegesf@gmail.com",
				"url": "https://sf.actscollege.church/",
				"sameAs": [
					"https://www.instagram.com/klesis.sanfrancisco/",
					"https://www.instagram.com/sfsukoinonia/",
					"https://www.actscollege.church/",
					"https://www.acts2.network/"
				],
				"description": "Klesis SF (Acts College SF) is a Christian fellowship and club serving college students at USF, SFSU, and CCSF in San Francisco. We offer weekly worship, Bible study, and community for students seeking faith and fellowship.",
				"keywords": "Klesis, Christian fellowship, USF, SFSU, San Francisco, college ministry, Bible study, worship, Christian club"
			}
		</script>
		<!-- Event Schema for Sunday Services -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Event",
				"name": "Acts College SF Sunday Service",
				"eventSchedule": {
					"@type": "Schedule",
					"byDay": "Sunday",
					"startTime": "12:00",
					"endTime": "13:30",
					"repeatFrequency": "P1W"
				},
				"location": {
					"@type": "Place",
					"name": "Acts2 Network",
					"address": {
						"@type": "PostalAddress",
						"streetAddress": "1275 Harbor Bay Pkwy",
						"addressLocality": "Alameda",
						"addressRegion": "CA",
						"postalCode": "94502"
					}
				},
				"description": "Join us for our weekly Sunday service for worship, Bible study, and fellowship. Rides available from SFSU and USF.",
				"organizer": {
					"@type": "Organization",
					"name": "Acts College SF",
					"url": "https://sf.actscollege.church/"
				},
				"audience": {
					"@type": "EducationalAudience",
					"educationalRole": "student",
					"audienceType": "College Students"
				}
			}
		</script>
		<!-- BreadcrumbList for better navigation in search results -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "Acts College SF",
				"alternateName": ["Klesis SF", "Klesis San Francisco", "USF Christian Fellowship", "SFSU Christian Fellowship"],
				"url": "https://sf.actscollege.church/",
				"potentialAction": {
					"@type": "SearchAction",
					"target": "https://sf.actscollege.church/?q={search_term_string}",
					"query-input": "required name=search_term_string"
				}
			}
		</script>
	</head>
	<body>
		<nav class="navbar">
			<div class="nav-container">
				<a href="/" class="nav-logo"
					><img src="/favicon.png" alt="Acts College SF Logo" /> Acts College
					SF</a
				>
				<div class="nav-menu">
					<a href="/" class="nav-link">Home</a>
					<a href="/church" class="nav-link">Church</a>
					<!-- <a href="/blog" class="nav-link">Blog</a> -->
					<a href="/connect" class="nav-link">Connect</a>
				</div>
				<div class="hamburger">
					<span></span>
					<span></span>
					<span></span>
				</div>
			</div>
		</nav>
		<main>
			<slot />
		</main>
		<footer class="footer">
			<div class="footer-container">
				<div class="footer-section">
					<h3>Acts College SF</h3>
					<p>
						A Christian fellowship and club serving college students 
						at USF, SFSU, and CCSF in San Francisco. Join our community 
						for worship, Bible study, and fellowship.
					</p>
				</div>
				<div class="footer-section">
					<h3>Quick Links</h3>
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/church">Church</a></li>
						<li><a href="/connect">Connect</a></li>
						<li>
							<a href="/statement-of-faith">Statement of Faith</a>
						</li>
					</ul>
				</div>
				<div class="footer-section">
					<h3>Contact</h3>
					<p>Email: actcollegesf@gmail.com</p>
					<p>San Francisco, CA</p>
				</div>
				<div class="footer-section" aria-label="Affiliations">
					<h3>Our Affiliations</h3>

					<div class="affiliations-logos">
						<a
							class="affiliation-link"
							href="https://www.acts2.network/"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="Acts 2 Network"
						>
							<img
								src="/footer/Acts2+Network.webp"
								alt="Acts 2 Network"
								loading="lazy"
								decoding="async"
							/>
						</a>
						<a
							class="affiliation-link"
							href="https://www.actscollege.church/"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="Acts2 College"
						>
							<img
								src="/footer/Acts2+College.webp"
								alt="Acts2 College"
								loading="lazy"
								decoding="async"
							/>
						</a>
						<a
							class="affiliation-link"
							href="https://www.namb.net/send-network/"
							target="_blank"
							rel="noopener noreferrer"
							aria-label="Send Network (NAMB)"
						>
							<img
								src="/footer/SEND+Network.webp"
								alt="Send Network"
								loading="lazy"
								decoding="async"
							/>
						</a>
					</div>
					<p class="affiliations-description">
						Acts College Church is a part of Acts2 College, the
						Acts2 Network, and the Send Network.
					</p>
				</div>
			</div>
			<div class="footer-bottom">
				<p>
					&copy; {new Date().getFullYear()} Acts College SF. All rights
					reserved.
				</p>
			</div>
		</footer>
		<Analytics />
	</body>
</html>

<style>
	/* Navigation Styles */
	.navbar {
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--color-border);
		position: sticky;
		top: 0;
		z-index: 1000;
		width: 100%;
		transition: var(--transition);
	}

	.nav-container {
		max-width: var(--container-max-width);
		margin: 0 auto;
		padding: 0 var(--spacing-sm);
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: var(--nav-height);
	}

	.nav-logo {
		font-family: var(--font-heading);
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--color-text);
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
	}

	.nav-logo img {
		height: 40px;
		width: auto;
	}

	.nav-menu {
		display: flex;
		gap: var(--spacing-sm);
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.nav-link {
		color: var(--color-text-light);
		text-decoration: none;
		font-weight: 500;
		transition: var(--transition);
		padding: 0.5rem 1rem;
		border-radius: var(--radius-sm);
		font-family: var(--font-heading);
	}

	.nav-link:hover {
		color: var(--color-primary);
		background-color: var(--color-bg-alt);
	}

	.hamburger {
		display: none;
		flex-direction: column;
		cursor: pointer;
		gap: 6px;
	}

	.hamburger span {
		width: 25px;
		height: 2px;
		background: var(--color-text);
		transition: 0.3s;
		border-radius: 2px;
	}

	main {
		min-height: calc(100vh - var(--nav-height));
	}

	/* Footer Styles */
	.footer {
		background: var(--color-footer-bg);
		color: var(--color-footer-text);
		padding: var(--spacing-xl) 0 var(--spacing-md);
		margin-top: auto;
	}

	.footer-container {
		max-width: var(--container-max-width);
		margin: 0 auto;
		padding: 0 var(--spacing-sm);
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
	}

	.footer-section h3 {
		font-size: 1.25rem;
		margin-bottom: var(--spacing-md);
		color: var(--color-footer-text);
	}

	.footer-section p {
		color: var(--color-footer-text-light);
		margin-bottom: var(--spacing-sm);
		line-height: 1.6;
	}

	.footer-section ul {
		list-style: none;
		padding: 0;
	}

	.footer-section ul li {
		margin-bottom: 0.75rem;
	}

	.footer-section a {
		color: var(--color-footer-text-light);
		text-decoration: none;
		transition: var(--transition);
	}

	.footer-section a:hover {
		color: var(--color-primary);
	}

	/* Affiliation Styles */
	.affiliations-logos {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
		margin: var(--spacing-sm) 0;
	}

	.affiliations-logos img {
		height: 30px;
		max-width: 160px;
		opacity: 0.8;
		transition: var(--transition);
	}

	.affiliations-logos img:hover {
		opacity: 1;
	}

	.affiliations-description {
		font-size: 0.875rem;
		line-height: 1.5;
		opacity: 0.7;
	}

	.footer-bottom {
		border-top: 1px solid var(--color-footer-border);
		margin-top: var(--spacing-xl);
		padding-top: var(--spacing-md);
		text-align: center;
		color: var(--color-footer-text-light);
		font-size: 0.875rem;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.nav-menu {
			position: fixed;
			top: var(--nav-height);
			left: 0;
			width: 100%;
			height: 0;
			background: rgba(255, 255, 255, 0.98);
			backdrop-filter: blur(10px);
			flex-direction: column;
			justify-content: center;
			align-items: center;
			overflow: hidden;
			transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			border-bottom: 1px solid var(--color-border);
		}

		.nav-menu.active {
			height: calc(100vh - var(--nav-height));
		}

		.hamburger {
			display: flex;
		}

		.hamburger.active span:nth-child(1) {
			transform: rotate(45deg) translate(5px, 6px);
		}

		.hamburger.active span:nth-child(2) {
			opacity: 0;
		}

		.hamburger.active span:nth-child(3) {
			transform: rotate(-45deg) translate(5px, -6px);
		}

		.nav-link {
			font-size: 1.5rem;
			margin: 1rem 0;
		}

		.footer-container {
			grid-template-columns: 1fr;
			gap: var(--spacing-md);
		}
	}
</style>

<script>
	// Mobile menu toggle
	document.addEventListener("DOMContentLoaded", function () {
		const hamburger = document.querySelector(".hamburger");
		const navMenu = document.querySelector(".nav-menu");

		if (hamburger && navMenu) {
			hamburger.addEventListener("click", function () {
				hamburger.classList.toggle("active");
				navMenu.classList.toggle("active");
			});

			// Close menu when clicking on a link
			const navLinks = document.querySelectorAll(".nav-link");
			navLinks.forEach((link) => {
				link.addEventListener("click", () => {
					navMenu.classList.remove("active");
				});
			});
		}
	});
</script>
