<style>
	/* Base Styles */
	.container {
		max-width: var(--container-width);
		margin: 0 auto;
		padding: 0 var(--space-md);
	}

	/* Common Section Styles */
	h2 {
		font-size: var(--font-xlarge);
		color: var(--color-heading);
		margin-bottom: var(--space-lg);
		text-align: center;
	}

	/* Hero Section */
	.hero {
		position: relative;
		color: white;
		padding: var(--space-xl) 0;
		text-align: center;
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -2;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: var(--overlay);
		z-index: -1;
	}

	.hero h1 {
		font-size: var(--font-large);
		font-weight: 700;
		margin-bottom: var(--space-md);
	}

	.hero-subtitle {
		font-size: var(--font-medium);
		line-height: 1.6;
		opacity: 0.95;
		max-width: var(--card-max);
		margin: 0 auto var(--space-sm);
	}

	/* Map Card Styles (used in both church and pickup sections) */
	.map-card-container {
		display: flex;
		justify-content: center;
		margin: 0 auto var(--space-md) auto;
		max-width: 500px;
		width: 100%;
	}

	.map-card {
		background: var(--color-bg-alt);
		border-radius: var(--radius);
		box-shadow: var(--shadow);
		border: 1px solid var(--color-border);
		overflow: hidden;
		width: 100%;
		height: 380px;
	}

	.map-card-content {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	.service-details {
		padding: var(--space-md) var(--space-md) 0;
		border-bottom: 1px solid var(--color-border);
		flex-shrink: 0;
	}

	.detail-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0;
	}

	.detail-item .detail-value {
		padding-bottom: var(--space-xs);
	}

	.detail-label {
		font-weight: 600;
		color: var(--color-heading);
		font-size: var(--font-small);
	}

	.detail-value {
		color: var(--color-text-lighter);
		font-size: var(--font-small);
		text-align: right;
	}

	.map-embed {
		position: relative;
		padding-top: 56.25%; /* 16:9 aspect ratio */
		height: 0;
		overflow: hidden;
		flex-grow: 1;
	}

	.map-embed iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
		border-radius: 0 0 var(--radius) var(--radius);
		background: var(--color-bg);
	}

	/* Section Specific Styles */
	.about-church-section {
		padding: var(--space-xl) 0;
		background: var(--color-bg);
	}

	.belief-content p {
		font-size: var(--font-medium);
		line-height: 1.8;
		color: var(--color-text-lighter);
		max-width: var(--content-max);
		margin: 0 auto var(--space-md);
		text-align: center;
	}

	.pickup-section {
		padding: var(--space-lg) 0;
		background: var(--color-bg);
	}

	.pickup-description {
		font-size: var(--font-medium);
		color: var(--color-text-lighter);
		max-width: var(--card-max);
		margin: 0 auto var(--space-lg);
		line-height: 1.7;
		text-align: center;
	}

	.pickup-maps-container {
		display: flex;
		gap: var(--space-md);
		justify-content: center;
		flex-wrap: nowrap;
		max-width: 1100px;
		margin: 0 auto;
	}

	.pickup-maps-container .map-card-container {
		flex: 1 1 0;
		min-width: 0;
		max-width: 500px;
		margin: 0;
	}

	.join-section {
		padding: var(--space-xl) 0;
		background: var(--color-bg-alt);
		text-align: center;
	}

	.join-text {
		font-size: var(--font-medium);
		color: var(--color-text-lighter);
		max-width: var(--card-max);
		margin: 0 auto var(--space-lg);
		line-height: 1.7;
	}

	.join-actions {
		display: flex;
		gap: var(--space-sm);
		justify-content: center;
		flex-wrap: wrap;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.container {
			padding: 0 var(--space-sm);
		}

		.hero {
			padding: var(--space-lg) 0;
		}

		.hero h1 {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.about-church-section,
		.pickup-section,
		.join-section {
			padding: var(--space-md) 0;
		}

		.map-card-container {
			max-width: 100%;
		}

		.map-card {
			height: 350px;
		}

		.pickup-maps-container .map-card-container {
			max-width: 100%;
		}

		.service-details {
			padding: var(--space-sm) var(--space-sm) 0;
		}

		.detail-item {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--space-xs);
		}

		.detail-value {
			text-align: left;
		}

		.join-actions {
			flex-direction: column;
			align-items: center;
			gap: var(--space-md);
		}

		.pickup-maps-container {
			flex-direction: column;
			flex-wrap: wrap;
			gap: var(--space-md);
		}
		
		.pickup-maps-container .map-card-container {
			flex: 1 1 auto;
			min-width: 100%;
		}
	}
</style>