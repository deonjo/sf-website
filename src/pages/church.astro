---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Church - SF Acts 2 College">
	<section class="hero">
		<div class="container">
			<h1>Church Service</h1>
			<p class="hero-subtitle">Join us for our Sunday services!</p>
		</div>
	</section>

	<section class="about-church-section">
		<div class="container">
			<h2>Sunday Service Information</h2>
			<div class="belief-content">
				<p>
					Klesis Christian Fellowship holds Sunday services throughout the year. During the academic school year, we meet in San Francisco. During the winter break, our services are held in Alameda.
				</p>
                <p>
                    We offer rides to our services from the USF campus. If you need a ride, please email us at <a href="mailto:klesis.sanfrancisco@gmail.com">klesis.sanfrancisco@gmail.com</a> to arrange it.
                </p>
			</div>
		</div>
	</section>

	<section class="map-section">
		<div class="container">
			<h2>Our Location</h2>
			<div class="map-container">
				<iframe 
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3155.643479804571!2d-122.23667682286083!3d37.728045514848546!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808f8515e7d0b39f%3A0x5c2dd0ff685ebc66!2sActs2%20Network!5e0!3m2!1sen!2sus!4v1753328538209!5m2!1sen!2sus" 
					allowfullscreen="" 
					loading="lazy" 
					referrerpolicy="no-referrer-when-downgrade">
				</iframe>
			</div>
		</div>
	</section>

	<section class="join-section">
		<div class="container">
			<h2>Ready to Join Us?</h2>
			<p class="join-text">
				We'd love to have you join us for our next service.
			</p>
			<div class="join-actions">
				<a href="/connect" class="primary-button">Get Connected</a>
				<a href="/statement-of-faith" class="secondary-button">Our Beliefs</a>
			</div>
		</div>
	</section>
</Layout>

<style>
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero Section */
	.hero {
		background: linear-gradient(135deg, #059669 0%, #047857 100%);
		color: white;
		padding: 5rem 0;
		text-align: center;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.hero-subtitle {
		font-size: 1.3rem;
		opacity: 0.9;
		max-width: 600px;
		margin: 0 auto;
	}

	/* About Church Section */
	.about-church-section {
		padding: 5rem 0;
		background: white;
	}

	.about-church-section h2 {
		text-align: center;
		font-size: 2.5rem;
		color: #1e293b;
		margin-bottom: 3rem;
	}

	.belief-content p {
		font-size: 1.2rem;
		line-height: 1.8;
		color: #475569;
		max-width: 900px;
		margin: 0 auto 1rem auto;
		text-align: center;
	}

	/* Map Section */
	.map-section {
		padding: 0 0 5rem 0;
		background: white;
	}

	.map-section h2 {
		text-align: center;
		font-size: 2.5rem;
		color: #1e293b;
		margin-bottom: 3rem;
	}

	.map-container {
		position: relative;
		overflow: hidden;
		padding-top: 56.25%; /* 16:9 Aspect Ratio */
		border-radius: 12px;
		box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
		max-width: 900px;
		margin: 0 auto;
	}

	.map-container iframe {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		border: 0;
	}

	/* Join Section */
	.join-section {
		padding: 5rem 0;
		background: #f8fafc;
		text-align: center;
	}

	.join-section h2 {
		font-size: 2.5rem;
		color: #1e293b;
		margin-bottom: 2rem;
	}

	.join-text {
		font-size: 1.2rem;
		color: #475569;
		max-width: 700px;
		margin: 0 auto 3rem auto;
		line-height: 1.7;
	}

	.join-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.primary-button,
	.secondary-button {
		padding: 1rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		transition: all 0.3s ease;
		display: inline-block;
	}

	.primary-button {
		background: #059669;
		color: white;
	}

	.primary-button:hover {
		background: #047857;
		transform: translateY(-2px);
	}

	.secondary-button {
		background: white;
		color: #059669;
		border: 2px solid #059669;
	}

	.secondary-button:hover {
		background: #059669;
		color: white;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}

		.hero {
			padding: 4rem 0;
		}

		.hero h1 {
			font-size: 2.5rem;
		}

		.about-church-section,
		.map-section,
		.join-section {
			padding: 3rem 0;
		}

		.join-actions {
			flex-direction: column;
			align-items: center;
		}

		.primary-button,
		.secondary-button {
			width: 100%;
			max-width: 300px;
		}
	}
</style>