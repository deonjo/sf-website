---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get Connected - SF Acts 2 College">
	<section class="hero">
		<img src="/header-banners/Connect Banner.jpg" alt="Connect with SF Acts 2 College" class="hero-image">
		<div class="hero-overlay"></div>
		<div class="container">
			<h1>Nice to meet you! ðŸ‘‹</h1>
			<p class="hero-subtitle">
				Sign up for updates, or send us a question or comment below.
			</p>
		</div>
	</section>

	<section class="form-section">
		<div class="container">
			<div class="form-container">
				<iframe 
					src="https://docs.google.com/forms/d/e/1FAIpQLSfF4jozD1xm1rmQ7ztVI9SgXf0Xzw_2xGWu-Xu0T-s7w82edQ/viewform?embedded=true&chrome=false&header=false&hl=en&rm=minimal" 
					width="100%" 
					height="800" 
					frameborder="0" 
					marginheight="0" 
					marginwidth="0"
					style="border-radius: 16px; box-shadow: 0 10px 25px rgba(0,0,0,0.08);"
				>
					Loadingâ€¦
				</iframe>
			</div>
		</div>
	</section>

	<section class="info-section">
		<div class="container">
			<div class="info-content">
				<p>
					SF Acts 2 College is a Christian fellowship serving college students and young professionals in the San Francisco area. 
					We gather weekly for worship, Bible study, and fellowship as we grow together in our faith.
				</p>
			</div>
		</div>
	</section>
</Layout>

<style>
	.container {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Hero Section */
	.hero {
		position: relative;
		color: white;
		padding: 6rem 0;
		text-align: center;
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -2;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: -1;
	}

	.hero h1 {
		font-size: 2.8rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
	}

	.hero-subtitle {
		font-size: 1.2rem;
		line-height: 1.6;
		opacity: 0.95;
		max-width: 700px;
		margin: 0 auto 1rem;
	}

	/* Form Section */
	.form-section {
		padding: 4rem 0;
		background: white;
	}

	.form-section .container {
		max-width: 900px;
		margin: 0 auto;
		padding: 2rem;
	}

	.form-section .container iframe {
		width: 100%;
		height: 1500px;
		border: none;
		border-radius: 12px;
		background: white;
	}

	/* Info Section */
	.info-section {
		padding: 4rem 0;
		background: #f9fafb;
		border-top: 1px solid #e5e7eb;
	}

	.info-content {
		text-align: center;
		max-width: 600px;
		margin: 0 auto;
	}

	.info-content p {
		font-size: 1.1rem;
		line-height: 1.7;
		color: #4b5563;
		margin-bottom: 2rem;
	}

	.quick-links {
		background: white;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 6px rgba(0,0,0,0.05);
	}

	.quick-links h4 {
		color: #374151;
		margin-bottom: 1rem;
		font-size: 1.2rem;
	}

	.quick-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 0.5rem;
	}

	.quick-links li {
		padding: 0.5rem 0;
	}

	.quick-links a {
		color: #4f46e5;
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.quick-links a:hover {
		color: #7c3aed;
		text-decoration: underline;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.container {
			padding: 0 1rem;
		}

		.hero {
			padding: 3rem 0;
		}

		.hero h1 {
			font-size: 2.2rem;
		}

		.hero-subtitle {
			font-size: 1.1rem;
		}

		.form-section {
			padding: 2rem 0;
		}

		.contact-form {
			padding: 2rem 1.5rem;
		}

		.info-section {
			padding: 3rem 0;
		}

		.quick-links ul {
			grid-template-columns: 1fr;
		}
	}
</style>
