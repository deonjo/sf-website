---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Get Connected - Acts College SF">
	<section class="hero">
		<img src="/header-banners/Connect Banner.jpg" alt="Connect with Acts College SF" class="hero-image">
		<div class="hero-overlay"></div>
		<div class="container">
			<h1>Nice to meet you! ðŸ‘‹</h1>
			<p class="hero-subtitle">
				Sign up for updates, or send us a question or comment below.
			</p>
		</div>
	</section>

	<section class="form-section">
		<div class="container">
			<div class="form-container">
				<div class="iframe-scale">
					<iframe
						src="https://docs.google.com/forms/d/e/1FAIpQLSfF4jozD1xm1rmQ7ztVI9SgXf0Xzw_2xGWu-Xu0T-s7w82edQ/viewform?embedded=true&chrome=false&header=false&hl=en&rm=minimal"
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
						frameborder="0"
						marginheight="0"
						marginwidth="0"
					>
						Loadingâ€¦
					</iframe>
				</div>
			</div>
		</div>
	</section>

	<section class="info-section">
		<div class="container">
			<div class="info-content">
				<p>
					Acts College SF is a Christian fellowship serving college students and young professionals in the San Francisco area. 
					We gather weekly for worship, Bible study, and fellowship as we grow together in our faith.
				</p>
			</div>
		</div>
	</section>
</Layout>

<style>
	/* Base Container */
	.container {
		max-width: var(--container-width-small);
		margin: 0 auto;
		padding: 0 var(--space-md);
	}

	/* Hero Section */
	.hero {
		position: relative;
		color: white;
		padding: var(--space-xl) 0 var(--space-lg);
		text-align: center;
		overflow: hidden;
	}

	.hero-image {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		z-index: -2;
	}

	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: var(--overlay);
		z-index: -1;
	}

	.hero h1 {
		font-size: var(--font-xlarge);
		font-weight: 700;
		margin-bottom: var(--space-md);
	}

	.hero-subtitle {
		font-size: var(--font-medium);
		line-height: 1.6;
		opacity: 0.95;
		max-width: var(--container-width-small);
		margin: 0 auto var(--space-sm);
	}

	/* Form Section */
	.form-section {
		padding: var(--space-md) 0 var(--space-xl);
		background: var(--color-bg);
	}

	.form-section .container {
		max-width: var(--form-width);
		margin: 0 auto;
		padding: var(--space-sm) var(--space-md) var(--space-md);
	}

	/* Scaled iframe wrapper to make the embedded Google Form more compact.
	   Note: We cannot style the form itself because it is inside a cross-origin iframe.
	   This wrapper scales the entire iframe as a safe workaround. */
	.form-container {
		--form-scale: 0.88;
		--form-height: 1500px;
		position: relative;
		overflow: hidden;
		border-radius: var(--radius-lg);
		background: var(--color-bg);
		height: var(--form-height);
	}

	.form-container .iframe-scale {
		transform: scale(var(--form-scale));
		transform-origin: top left;
		width: calc(100% / var(--form-scale));
		height: calc(var(--form-height) / var(--form-scale));
	}

	.form-container iframe {
		display: block;
		width: 100%;
		height: var(--form-height);
		border: 0;
		background: transparent;
	}

	/* Info Section */
	.info-section {
		padding: var(--space-xl) 0;
		background: var(--color-bg-alt);
		border-top: 1px solid var(--color-border);
	}

	.info-content {
		text-align: center;
		max-width: var(--content-width);
		margin: 0 auto;
	}

	.info-content p {
		font-size: var(--font-small);
		line-height: 1.7;
		color: var(--color-text-lighter);
		margin-bottom: var(--space-md);
	}

	/* Quick Links Section - preserved but not currently used on page */
	.quick-links {
		background: var(--color-bg);
		padding: var(--space-md);
		border-radius: var(--radius);
		box-shadow: var(--shadow-sm);
	}

	.quick-links h4 {
		color: var(--color-text-light);
		margin-bottom: var(--space-sm);
		font-size: var(--font-medium);
	}

	.quick-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--space-xs);
	}

	.quick-links li {
		padding: var(--space-xs) 0;
	}

	.quick-links a {
		color: var(--color-link);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.quick-links a:hover {
		color: var(--color-link-hover);
		text-decoration: underline;
	}

	/* Mobile Styles */
	@media (max-width: 768px) {
		.container {
			padding: 0 var(--space-sm);
		}

		.hero {
			padding: var(--space-lg) 0 var(--space-md);
		}

		.hero h1 {
			font-size: var(--font-large);
		}

		.hero-subtitle {
			font-size: var(--font-small);
		}

		.form-section,
		.info-section {
			padding: var(--space-md) 0;
		}

		/* Tighten the gap between hero and form further on mobile */
		.form-section { 
			padding-top: var(--space-sm);
		}

		.form-section .container {
			padding-top: var(--space-sm);
		}

		.form-container {
			--form-scale: 1; /* Don't scale down on smaller screens for readability */
		}

		.quick-links ul {
			grid-template-columns: 1fr;
		}
	}
</style>
